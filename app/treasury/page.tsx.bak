'use client';

import React, { useState, useEffect } from 'react';
import Link from 'next/link';
import CapTable from '@/components/token/CapTable';
import { useYoursWalletContext } from '@/lib/context/YoursWalletContext';
import { FaWallet } from 'react-icons/fa';

interface PricingTier {
  minAmount: number;
  maxAmount: number;
  pricePerThousand: number;
  discount: number;
}

interface TreasuryInfo {
  token: {
    tokenId: string;
    symbol: string;
    totalSupply: number;
    treasuryBalance: number;
    bsvBalance: number;
    marketUrl: string;
  };
  pricing: {
    tiers: PricingTier[];
  };
  capTable: any[];
  circulatingSupply: number;
}

interface CapTableEntry {
  holder: string;
  displayName?: string;
  tokens: number;
  percentage: number;
  category: 'treasury' | 'founder' | 'investor' | 'team' | 'public';
}

export default function TreasuryPage() {
  const { isConnected, addresses, connect, disconnect } = useYoursWalletContext();
  const [treasuryInfo, setTreasuryInfo] = useState<TreasuryInfo | null>(null);
  const [loading, setLoading] = useState(true);
  const [purchaseAmount, setPurchaseAmount] = useState<number>(10000);
  const [quote, setQuote] = useState<any>(null);
  const [loadingQuote, setLoadingQuote] = useState(false);
  const [selectedCurrency, setSelectedCurrency] = useState<'BSV' | 'ETH' | 'SOL'>('BSV');
  const [purchasing, setPurchasing] = useState(false);
  const [purchaseError, setPurchaseError] = useState<string | null>(null);
  const [purchaseSuccess, setPurchaseSuccess] = useState<string | null>(null);

  useEffect(() => {
    fetchTreasuryInfo();
  }, []);

  useEffect(() => {
    if (purchaseAmount >= 1000) {
      fetchQuote();
    }
  }, [purchaseAmount, selectedCurrency]);

  const fetchTreasuryInfo = async () => {
    try {
      const res = await fetch('/api/treasury');
      const data = await res.json();
      setTreasuryInfo(data);
    } catch (error) {
      console.error('Failed to fetch treasury info:', error);
    } finally {
      setLoading(false);
    }
  };

  const fetchQuote = async () => {
    setLoadingQuote(true);
    try {
      const res = await fetch(
        `/api/treasury?action=quote&amount=${purchaseAmount}&currency=${selectedCurrency}`
      );
      const data = await res.json();
      setQuote(data);
    } catch (error) {
      console.error('Failed to fetch quote:', error);
    } finally {
      setLoadingQuote(false);
    }
  };

  const formatNumber = (n: number): string => {
    if (n >= 1_000_000_000) return `${(n / 1_000_000_000).toFixed(2)}B`;
    if (n >= 1_000_000) return `${(n / 1_000_000).toFixed(2)}M`;
    if (n >= 1_000) return `${(n / 1_000).toFixed(2)}K`;
    return n.toLocaleString();
  };

  const getTierForAmount = (amount: number): PricingTier | null => {
    if (!treasuryInfo) return null;
    return treasuryInfo.pricing.tiers.find(
      t => amount >= t.minAmount && amount <= t.maxAmount
    ) || null;
  };

  const currentTier = getTierForAmount(purchaseAmount);

  const handlePurchase = async () => {
    if (!isConnected || !quote) return;

    setPurchasing(true);
    setPurchaseError(null);
    setPurchaseSuccess(null);

    try {
      const res = await fetch('/api/treasury', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          action: 'purchase',
          amount: purchaseAmount,
          currency: selectedCurrency,
          buyerAddress: addresses.bsvAddress
        })
      });

      const data = await res.json();

      if (data.error) {
        setPurchaseError(data.error);
      } else {
        setPurchaseSuccess(`Successfully purchased ${formatNumber(purchaseAmount)} $BOASE tokens!`);
        fetchTreasuryInfo(); // Refresh treasury data
      }
    } catch (error) {
      setPurchaseError('Failed to process purchase. Please try again.');
    } finally {
      setPurchasing(false);
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen bg-black text-white flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin w-8 h-8 border-2 border-cyan-400 border-t-transparent mx-auto mb-4" />
          <p className="text-white/60">Loading treasury data...</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-black text-white">
      {/* Header */}
      <div className="border-b border-white/20 p-6">
        <div className="max-w-6xl mx-auto">
          <Link href="/" className="text-white/60 text-xs uppercase tracking-wider hover:text-white mb-4 inline-block">
            &larr; HOME
          </Link>
          <h1 className="text-4xl md:text-5xl font-bold uppercase tracking-wider">
            TREASURY
          </h1>
          <p className="text-white/60 mt-2">
            Purchase $BOASE tokens directly from the treasury
          </p>
        </div>
      </div>

      <div className="max-w-6xl mx-auto p-6">
        {/* Stats Row */}
        <div className="grid md:grid-cols-4 gap-4 mb-12">
          <div className="border border-white/20 p-6">
            <p className="text-xs uppercase tracking-wider text-white/60 mb-2">TREASURY BALANCE</p>
            <p className="text-2xl font-bold text-cyan-400">
              {formatNumber(treasuryInfo?.token.treasuryBalance || 0)}
            </p>
            <p className="text-xs text-white/40">$BOASE tokens</p>
          </div>
          <div className="border border-white/20 p-6">
            <p className="text-xs uppercase tracking-wider text-white/60 mb-2">CIRCULATING</p>
            <p className="text-2xl font-bold text-green-400">
              {formatNumber(treasuryInfo?.circulatingSupply || 0)}
            </p>
            <p className="text-xs text-white/40">$BOASE tokens</p>
          </div>
          <div className="border border-white/20 p-6">
            <p className="text-xs uppercase tracking-wider text-white/60 mb-2">TOTAL SUPPLY</p>
            <p className="text-2xl font-bold">
              {formatNumber(treasuryInfo?.token.totalSupply || 0)}
            </p>
            <p className="text-xs text-white/40">$BOASE tokens</p>
          </div>
          <div className="border border-white/20 p-6">
            <p className="text-xs uppercase tracking-wider text-white/60 mb-2">BSV BALANCE</p>
            <p className="text-2xl font-bold text-yellow-400">
              {(treasuryInfo?.token.bsvBalance || 0).toFixed(4)}
            </p>
            <p className="text-xs text-white/40">BSV</p>
          </div>
        </div>

        <div className="grid md:grid-cols-2 gap-8">
          {/* Purchase Form */}
          <div className="border border-white/20">
            <div className="border-b border-white/20 p-4">
              <h2 className="text-lg font-bold uppercase tracking-wider">
                PURCHASE TOKENS
              </h2>
            </div>

            <div className="p-6 space-y-6">
              {/* Amount Input */}
              <div>
                <label className="block text-xs uppercase tracking-wider text-white/60 mb-2">
                  TOKEN AMOUNT
                </label>
                <input
                  type="number"
                  value={purchaseAmount}
                  onChange={(e) => setPurchaseAmount(Math.max(1000, parseInt(e.target.value) || 0))}
                  min={1000}
                  step={1000}
                  className="w-full bg-black border border-white/20 p-4 text-2xl font-bold text-white focus:border-cyan-400 focus:outline-none"
                />
                <p className="text-xs text-white/40 mt-2">Minimum: 1,000 tokens</p>
              </div>

              {/* Quick Amount Buttons */}
              <div className="flex flex-wrap gap-2">
                {[10000, 50000, 100000, 500000, 1000000].map(amount => (
                  <button
                    key={amount}
                    onClick={() => setPurchaseAmount(amount)}
                    className={`px-4 py-2 text-sm border transition-colors ${
                      purchaseAmount === amount
                        ? 'border-cyan-400 text-cyan-400'
                        : 'border-white/20 text-white/60 hover:border-white/40'
                    }`}
                  >
                    {formatNumber(amount)}
                  </button>
                ))}
              </div>

              {/* Payment Currency */}
              <div>
                <label className="block text-xs uppercase tracking-wider text-white/60 mb-2">
                  PAYMENT CURRENCY
                </label>
                <div className="flex gap-2">
                  {(['BSV', 'ETH', 'SOL'] as const).map(currency => (
                    <button
                      key={currency}
                      onClick={() => setSelectedCurrency(currency)}
                      className={`flex-1 py-3 text-sm font-bold uppercase border transition-colors ${
                        selectedCurrency === currency
                          ? 'border-cyan-400 text-cyan-400 bg-cyan-400/10'
                          : 'border-white/20 text-white/60 hover:border-white/40'
                      }`}
                    >
                      {currency}
                    </button>
                  ))}
                </div>
              </div>

              {/* Pricing Tier */}
              {currentTier && (
                <div className="border border-white/20 p-4 bg-white/5">
                  <div className="flex items-center justify-between mb-2">
                    <span className="text-xs uppercase tracking-wider text-white/60">
                      YOUR TIER
                    </span>
                    {currentTier.discount > 0 && (
                      <span className="text-xs px-2 py-1 bg-green-400/20 text-green-400 border border-green-400">
                        {currentTier.discount}% OFF
                      </span>
                    )}
                  </div>
                  <p className="text-lg font-bold">
                    ${currentTier.pricePerThousand} per 1,000 tokens
                  </p>
                </div>
              )}

              {/* Quote */}
              {quote && !loadingQuote && (
                <div className="border border-cyan-400/50 p-4 bg-cyan-400/5">
                  <div className="flex items-center justify-between mb-2">
                    <span className="text-xs uppercase tracking-wider text-cyan-400">
                      TOTAL PRICE
                    </span>
                    <span className="text-xs text-white/60">
                      ${quote.priceUsd?.toFixed(2)} USD
                    </span>
                  </div>
                  <p className="text-3xl font-bold text-cyan-400">
                    {quote.payment?.amount?.toFixed(6)} {selectedCurrency}
                  </p>
                  {quote.savings > 0 && (
                    <p className="text-xs text-green-400 mt-2">
                      You save ${quote.savings.toFixed(2)} with volume discount
                    </p>
                  )}
                </div>
              )}

              {/* Status Messages */}
              {purchaseError && (
                <div className="border border-red-500/50 bg-red-500/10 p-4">
                  <p className="text-red-400 text-sm">{purchaseError}</p>
                </div>
              )}
              {purchaseSuccess && (
                <div className="border border-green-500/50 bg-green-500/10 p-4">
                  <p className="text-green-400 text-sm">{purchaseSuccess}</p>
                </div>
              )}

              {/* Purchase Button */}
              {!isConnected ? (
                <button
                  onClick={connect}
                  className="w-full py-4 bg-white text-black font-bold uppercase tracking-wider hover:bg-gray-200 flex items-center justify-center gap-3"
                >
                  <FaWallet size={16} />
                  CONNECT WALLET TO PURCHASE
                </button>
              ) : (
                <>
                  <button
                    onClick={handlePurchase}
                    disabled={!quote || purchaseAmount < 1000 || purchasing}
                    className="w-full py-4 bg-cyan-400 text-black font-bold uppercase tracking-wider hover:bg-cyan-300 disabled:opacity-50 disabled:cursor-not-allowed"
                  >
                    {purchasing ? 'PROCESSING...' : `PURCHASE ${formatNumber(purchaseAmount)} $BOASE`}
                  </button>
                  <div className="flex items-center justify-between text-xs">
                    <span className="text-white/40">
                      Connected: {addresses.bsvAddress.slice(0, 8)}...{addresses.bsvAddress.slice(-6)}
                    </span>
                    <button
                      onClick={disconnect}
                      className="text-white/40 hover:text-white"
                    >
                      Disconnect
                    </button>
                  </div>
                </>
              )}
            </div>
          </div>

          {/* Cap Table */}
          <div>
            <CapTable
              entries={treasuryInfo?.capTable || []}
              tokenSymbol="BOASE"
              totalSupply={treasuryInfo?.token.totalSupply || 1_000_000_000}
            />
          </div>
        </div>

        {/* Pricing Tiers */}
        <div className="mt-12 border border-white/20">
          <div className="border-b border-white/20 p-4">
            <h2 className="text-lg font-bold uppercase tracking-wider">
              VOLUME DISCOUNTS
            </h2>
          </div>
          <div className="grid md:grid-cols-4 divide-x divide-white/10">
            {treasuryInfo?.pricing.tiers.map((tier, i) => (
              <div
                key={i}
                className={`p-6 ${currentTier === tier ? 'bg-cyan-400/10' : ''}`}
              >
                <p className="text-xs uppercase tracking-wider text-white/60 mb-2">
                  {formatNumber(tier.minAmount)}+ tokens
                </p>
                <p className="text-2xl font-bold mb-1">
                  ${tier.pricePerThousand}
                </p>
                <p className="text-xs text-white/40">per 1,000 tokens</p>
                {tier.discount > 0 && (
                  <p className="text-xs text-green-400 mt-2">
                    {tier.discount}% discount
                  </p>
                )}
              </div>
            ))}
          </div>
        </div>

        {/* Links */}
        <div className="mt-12 flex gap-4 justify-center">
          <a
            href={treasuryInfo?.token.marketUrl}
            target="_blank"
            rel="noopener noreferrer"
            className="px-6 py-3 border border-white/20 text-white/60 hover:text-white hover:border-white/40 text-sm uppercase tracking-wider"
          >
            Trade on 1Sat.Market &rarr;
          </a>
          <Link
            href="/boasetoken"
            className="px-6 py-3 border border-white/20 text-white/60 hover:text-white hover:border-white/40 text-sm uppercase tracking-wider"
          >
            Token Info &rarr;
          </Link>
        </div>
      </div>
    </div>
  );
}
