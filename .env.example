# Treasury Wallet (BSV Ordinals)
# Generate with: node scripts/generate-wallet.mjs
TREASURY_ADDRESS=
TREASURY_PRIVATE_KEY=
TREASURY_PUBLIC_KEY=
TREASURY_PAYMAIL=your-handle@handcash.io

# x402 Facilitator
# Optional override; defaults to TREASURY_* if not set
X402_TREASURY_ADDRESS=
X402_TREASURY_PRIVATE_KEY=
X402_NONCE_TTL_SECONDS=300
X402_VERIFY_REQUIRE_TX=true

# Domain verification for $address issuance
PATH402_DOMAIN_VERIFY_MODE=dns   # dns or http
PATH402_DOMAIN_VERIFY_REQUIRED=true

# Chain RPCs (for verification on EVM/Solana if enabled)
BASE_RPC_URL=
ETHEREUM_RPC_URL=
SOLANA_RPC_URL=

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
# Self-hosted or Supabase cloud instance
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# HandCash OAuth
# Create app at https://dashboard.handcash.io
HANDCASH_APP_ID=
HANDCASH_APP_SECRET=
