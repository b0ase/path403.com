generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"]
}

model User {
  @@schema("public")
  id                         String                @id
  handcashHandle             String                @unique
  tokens                     Int                   @default(0)
  totalWithdrawn             Int                   @default(0)
  unlockedItems              String                @default("[]")
  totalPaid                  Int                   @default(0)
  createdAt                  DateTime              @default(now())
  updatedAt                  DateTime              @updatedAt
  pendingDividends           Float                 @default(0)
  tokenBalance               BigInt                @default(0)
  totalDividendsPaid         Float                 @default(0)
  pendingDividendsSats       BigInt                @default(0)
  totalDividendsPaidSats     BigInt                @default(0)
  receivedWelcomeGift        Boolean               @default(false)
  welcomeGiftAt              DateTime?
  freeClicksUsed             Int                   @default(0)
  referredBy                 String?
  referredAt                 DateTime?
  yoursWalletBsvAddress      String?
  yoursWalletConnectedAt     DateTime?
  yoursWalletIdentityAddress String?
  yoursWalletOrdAddress      String?
  buttonClicks               ButtonClick[]
  issuedTokens               IssuedToken[]
  ledgerTransactions         LedgerTransaction[]
  projectTokenBalances       ProjectTokenBalance[]
  transactions               Transaction[]
  userTokens                 UserToken[]
  videoShares                VideoShare[]
  vault                      Vault?
}

model UserToken {
  @@schema("public")
  id             String   @id @default(uuid())
  userId         String
  theme          String
  ticker         String
  balance        Int      @default(0)
  totalWithdrawn Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id])

  @@unique([userId, theme])
  @@index([theme])
}

model GlobalStats {
  @@schema("public")
  id           Int      @id @default(1)
  totalPresses Int      @default(0)
  projectPool  Int      @default(0)
  userPool     Int      @default(0)
  lastPayout   DateTime @default(now())
}

model Transaction {
  @@schema("public")
  id        String   @id @default(uuid())
  type      String
  amount    BigInt
  userId    String
  createdAt DateTime @default(now())
  currency  String   @default("USD")
  theme     String   @default("default")
  user      User     @relation(fields: [userId], references: [id])

  @@index([theme])
}

model TokenSupply {
  @@schema("public")
  id              Int      @id @default(1)
  tokenName       String   @default("$MONEYBUTTON")
  totalSupply     BigInt   @default(1000000000)
  tokensSold      BigInt   @default(0)
  tokensRemaining BigInt   @default(1000000000)
  minPrice        Float    @default(0.0001)
  maxPrice        Float    @default(1000000)
  updatedAt       DateTime @updatedAt
  treasuryBalance Float    @default(0)
  currentUtxo     String?
  onChainBalance  BigInt   @default(1000000000)
}

model ThemedTokenSupply {
  @@schema("public")
  id              String   @id
  ticker          String   @unique
  tokenName       String
  totalSupply     BigInt   @default(1000000000)
  tokensSold      BigInt   @default(0)
  tokensRemaining BigInt   @default(1000000000)
  pricePerToken   Int      @default(1)
  treasuryBalance Float    @default(0)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model IssuedToken {
  @@schema("public")
  id             String   @id @default(uuid())
  ticker         String   @unique
  name           String
  totalSupply    BigInt   @default(1000000000)
  decimals       Int      @default(0)
  icon           String?
  deployTxId     String?
  tokenId        String?
  isDeployed     Boolean  @default(false)
  currentUtxo    String?
  onChainBalance BigInt   @default(0)
  platformTokens BigInt   @default(0)
  curveType      String   @default("LINEAR")
  initialPrice   String   @default("0.01")
  finalPrice     String   @default("1000000.00")
  issuerId       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  button         Button?
  issuer         User     @relation(fields: [issuerId], references: [id])

  @@index([issuerId])
  @@index([ticker])
}

model Button {
  @@schema("public")
  id              String      @id @default(uuid())
  handle          String      @unique
  tokenId         String      @unique
  pricePerPress   Int         @default(1)
  isActive        Boolean     @default(true)
  primaryColor    String      @default("#ec4899")
  secondaryColor  String      @default("#8b5cf6")
  buttonEmoji     String      @default("ðŸ”´")
  totalPresses    BigInt      @default(0)
  totalRevenue    BigInt      @default(0)
  tokensSold      BigInt      @default(0)
  tokensRemaining BigInt      @default(1000000000)
  platformFeeBps  Int         @default(100)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  token           IssuedToken @relation(fields: [tokenId], references: [id])

  @@index([handle])
}

model MintAuthorization {
  @@schema("public")
  id           String   @id @default(uuid())
  tokenId      String   @unique
  userId       String
  userHandle   String
  sigMessage   String
  sigPublicKey String
  sigSignature String
  sigTimestamp DateTime
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([tokenId])
}

model WithdrawalAuthorization {
  @@schema("public")
  id           String    @id @default(uuid())
  tokenTicker  String
  amount       BigInt
  toAddress    String
  userId       String
  userHandle   String
  sigMessage   String
  sigPublicKey String
  sigSignature String
  txId         String?
  status       String    @default("pending")
  createdAt    DateTime  @default(now())
  completedAt  DateTime?

  @@index([userId])
  @@index([tokenTicker])
}

model ProjectTokenBalance {
  @@schema("public")
  id          String   @id @default(uuid())
  userId      String
  projectSlug String
  tokenSymbol String
  balance     Decimal  @default(0) @db.Decimal(20, 8)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, projectSlug])
  @@index([userId])
  @@index([projectSlug])
}

model ButtonClick {
  @@schema("public")
  id                  String              @id @default(uuid())
  userId              String
  projectSlug         String
  amount              Decimal             @db.Decimal(10, 8)
  tokensEarned        Decimal             @db.Decimal(20, 8)
  createdAt           DateTime            @default(now())
  clearingBalanceSats BigInt              @default(0)
  user                User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  ledgerTransactions  LedgerTransaction[]
  videoShares         VideoShare[]

  @@index([userId])
  @@index([projectSlug])
}

model Video {
  @@schema("public")
  id             String       @id @default(uuid())
  filename       String
  url            String
  size           BigInt?
  type           String?
  metadata       Json?
  duration       Float?
  dimensions     String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  framePriceSats Int          @default(1)
  projectSlug    String?      @default("cherry")
  shares         VideoShare[]
}

model Audio {
  @@schema("public")
  id          String   @id @default(uuid())
  filename    String
  url         String
  size        BigInt?
  duration    Float?
  metadata    Json?
  projectSlug String   @default("cherry")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VideoShare {
  @@schema("public")
  id            String       @id @default(uuid())
  videoId       String
  userId        String
  shares        Int          @default(0)
  buttonClickId String?
  buttonClick   ButtonClick? @relation(fields: [buttonClickId], references: [id])
  user          User         @relation(fields: [userId], references: [id])
  video         Video        @relation(fields: [videoId], references: [id])

  @@unique([videoId, userId])
}

model LedgerTransaction {
  @@schema("public")
  id            String       @id @default(uuid())
  userId        String
  type          String
  amountSats    BigInt
  balanceAfter  BigInt
  referenceId   String?
  description   String?
  createdAt     DateTime     @default(now())
  buttonClickId String?
  buttonClick   ButtonClick? @relation(fields: [buttonClickId], references: [id])
  user          User         @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([type])
}

model Vault {
  @@schema("public")
  id              String   @id @default(uuid())
  userId          String   @unique
  userPublicKey   String // Hex
  appPublicKey    String // Hex (derived from master seed)
  appKeyPath      String // Derivation path relative to master
  backupPublicKey String // Hex
  redeemScript    String // Hex
  address         String // The P2SH address
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([address])
}

model AutoBook {
  @@schema("public")
  id           String         @id @default(uuid())
  title        String
  subject      String
  status       String         @default("DRAFT") // DRAFT, RESEARCHING, WRITING, EDITING, PUBLISHED
  releaseDate  DateTime?
  researchData Json?
  content      Json?
  coverUrl     String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  authorId     String?
  tasks        AutoBookTask[]

  @@index([status])
}

model AutoBookTask {
  @@schema("public")
  id           String    @id @default(uuid())
  bookId       String
  type         String // RESEARCH, OUTLINE, PROSE, COVER, REVIEW
  status       String    @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, FAILED
  result       String?   @db.Text
  error        String?
  scheduledFor DateTime?
  completedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  book         AutoBook  @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([bookId])
  @@index([status])
}
