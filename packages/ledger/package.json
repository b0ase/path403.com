{
  "name": "@b0ase/ledger",
  "version": "0.1.0",
  "description": "Unified accounting layer for b0ase tokens (1Sat + BRC-100)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@prisma/client": ">=5.0.0"
  },
  "devDependencies": {
    "@prisma/client": "^6.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ledger",
    "accounting",
    "tokens",
    "1sat",
    "brc100",
    "b0ase"
  ],
  "author": "b0ase",
  "license": "MIT"
}
